
public abstract class AkademikKadro extends Person{
	private Araç hususiAraç;
	private double asgari;
	public AkademikKadro(String name, String surname, boolean ehliyet) {
		super(name, surname, ehliyet);
		// TODO Auto-generated constructor stub
	}
	
	public double getAsgari() {
		return asgari;
	}
	public void setAsgari(double asgari) {
		this.asgari = asgari;
	}
	public Araç getHususiAraç() {
		return hususiAraç;
	}
	public void setHususiAraç(Araç hususiAraç) {
		this.hususiAraç = hususiAraç;
	}
	
	

}
